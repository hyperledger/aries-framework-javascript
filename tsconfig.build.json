{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "resolveJsonModule": true,
    "types": [],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src"],
  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**"
  ]
}
